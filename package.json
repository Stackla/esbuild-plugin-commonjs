{
  "name": "@hyrious/esbuild-plugin-commonjs",
  "version": "0.1.0",
  "description": "Bundle commonjs externals in es module in esbuild.",
  "main": "index.js",
  "keywords": [
    "esbuild",
    "plugin",
    "commonjs",
    "modules",
    "require"
  ],
  "author": "hyrious <hyrious@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "esbuild index.ts --bundle --external:esbuild --sourcemap --sources-content=false --outfile=index.js --platform=node --target=node12 --minify-syntax",
    "test": "esbuild-dev index.test.ts"
  },
  "peerDependencies": {
    "esbuild": "*"
  },
  "devDependencies": {
    "@hyrious/esbuild-dev": "^0.7.2",
    "@types/node": "^17.0.8",
    "esbuild": "^0.14.11"
  }
}
