{
  "name": "@hyrious/esbuild-plugin-commonjs",
  "version": "0.2.0",
  "description": "Bundle commonjs externals in es module in esbuild.",
  "main": "index.js",
  "types": "index.ts",
  "files": [
    "index.js",
    "index.js.map",
    "index.ts",
    "lexer.ts",
    "utils.ts"
  ],
  "keywords": [
    "esbuild",
    "plugin",
    "commonjs",
    "modules",
    "require"
  ],
  "author": "hyrious <hyrious@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "esbuild index.ts --bundle --external:esbuild --external:cjs-module-lexer --sourcemap --sources-content=false --outfile=index.js --platform=node --target=node14",
    "test": "esbuild-dev index.test.ts"
  },
  "peerDependencies": {
    "cjs-module-lexer": "*",
    "esbuild": "*"
  },
  "peerDependenciesMeta": {
    "cjs-module-lexer": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hyrious/esbuild-dev": "^0.7.4",
    "@types/node": "^17.0.21",
    "cjs-module-lexer": "^1.2.2",
    "esbuild": "^0.14.26"
  },
  "engines": {
    "node": ">=14"
  }
}
